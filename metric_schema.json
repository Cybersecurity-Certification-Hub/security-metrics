{
  "$schema": "http://json-schema.org/draft-2020-12/schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique, human-readable name"
    },
    "category": {
      "type": "string", 
      "description": "Category of the metric, e.g., 'EndpointSecurity', 'IdentityManagement'"
    },
    "description": {
      "type": "string", 
      "description": "Description using terms from the ontology."
    },
    "implementationGuidelines": {
      "type": "object",
      "additionalProperties": {
          "type": "string",
          "description": "Implementation guidelines for a specific evidence collector tool,  e.g., 'Use AES256 encryption for data at rest.'"
      }
  },
    "version": {
      "type": "string", 
      "description": "Version of the metric."
    },
    "comments": {
      "type": "string",
      "description": "Detailed explanation of the metric."
    },
    "configuration": {
    "type": "object",
    "additionalProperties": {
      "type": "object",
      "properties": {
        "operator": {
          "type": "string",
          "description": "Operator for the comparison, e.g., '==', '<=', 'isIn'. (See file 'metrics/operators.rego' for available operators.)"
        },
        "targetValue": {
          "type": "array",
          "description": "Target value for the operator, e.g., 'true', 'false', 'enabled', 'disabled', 'AES256'.",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["operator", "targetValue"]
    }
  }
},
"required": ["id", "category", "description", "version", "comments", "configuration"]
}