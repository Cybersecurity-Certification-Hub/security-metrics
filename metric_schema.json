{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique, human-readable name"
    },
    "description": {
      "type": "string",
      "description": "Description using terms from the ontology"
    },
    "version": {
      "type": "string",
      "description": "Version of the rule"
    },
    "comments": {
      "type": "string",
      "description": "Explanation and scenario where the metric is relevant"
    },
    "pointers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "operator": {
            "type": "string",
            "description": "Operator for the comparison"
          },
          "targetValue": {
            "oneOf": [
              {
                "type": "string",
                "description": "Target value for string-type pointers"
              },
              {
                "type": "boolean",
                "description": "Target value for boolean-type pointers"
              }
            ]
          }
        },
        "required": ["operator", "targetValue"]
      }
    },
    "interval": {
      "type": "integer",
      "description": "Interval for the configuration"
    }
  },
  "required": ["id", "description", "version", "comments", "pointers", "interval"]
}
